<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#ffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#ffffff">

            <ImageView
                android:id="@+id/imageView"
                app:srcCompat="@drawable/santo2"
                android:adjustViewBounds="true"
                android:layout_gravity="center_horizontal"
                android:layout_height="300dp"
                android:layout_width="match_parent"
                android:padding="20dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

            <ImageView
                android:src="@drawable/drawable_dash_line"
                android:layerType="software"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:id="@+id/div_line"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider0"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumbarungothic"
                    android:id="@+id/name_text0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="10dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/bbtn0"
                    android:layout_gravity="right"
                    android:padding="0dp"
                    android:visibility="gone"
                    android:text="검색"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginRight="8dp"
                    android:layout_width="64dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:background="@drawable/buttonshape"/>

                <Button
                    android:id="@+id/btn0"
                    android:layout_gravity="right"
                    android:padding="0dp"
                    android:scaleType="fitCenter"
                    android:visibility="gone"
                    android:text="공유"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:layout_marginRight="8dp"
                    android:layout_width="64dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/nanumbarungothic"
                    android:background="@drawable/buttonshape"/>

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="10dp"
                android:fontFamily="@font/nanumbarungothic"
                android:id="@+id/address_text0"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/space0"
                android:visibility="gone"/>

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider1"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_text1"
                android:fontFamily="@font/nanumbarungothic"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/bbtn1"
                android:layout_gravity="right"
                android:padding="0dp"
                android:visibility="gone"
                android:text="검색"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginRight="8dp"
                android:layout_width="64dp"
                android:layout_height="35dp"
                android:fontFamily="@font/nanumbarungothic"
                android:background="@drawable/buttonshape"/>

            <Button
                android:id="@+id/btn1"
                android:layout_gravity="right"
                android:padding="0dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:text="공유"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginRight="8dp"
                android:layout_width="64dp"
                android:layout_height="35dp"
                android:fontFamily="@font/nanumbarungothic"
                android:background="@drawable/buttonshape"/>

        </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/nanumbarungothic"
                android:id="@+id/address_text1"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:id="@+id/space1"
                android:visibility="gone"/>

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider2"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:visibility="gone"
                android:layout_marginBottom="15dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothic"
                android:id="@+id/name_text2"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/bbtn2"
                android:layout_gravity="right"
                android:padding="0dp"
                android:visibility="gone"
                android:text="검색"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginRight="8dp"
                android:layout_width="64dp"
                android:layout_height="35dp"
                android:fontFamily="@font/nanumbarungothic"
                android:background="@drawable/buttonshape"/>

            <Button
                android:id="@+id/btn2"
                android:layout_gravity="right"
                android:padding="0dp"
                android:visibility="gone"
                android:scaleType="fitCenter"
                android:text="공유"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_width="64dp"
                android:layout_height="35dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/nanumbarungothic"
                android:background="@drawable/buttonshape"/>

        </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumbarungothic"
                android:layout_marginLeft="10dp"
                android:id="@+id/address_text2"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:id="@+id/space2"
                android:visibility="gone"/>


        </LinearLayout>

        </LinearLayout>

    </ScrollView>



</android.support.constraint.ConstraintLayout>